<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cell_popular_destination_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_popular_destination"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_popular_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popular_destination_background"
            android:textColor="@color/black"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_popular_destination"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>