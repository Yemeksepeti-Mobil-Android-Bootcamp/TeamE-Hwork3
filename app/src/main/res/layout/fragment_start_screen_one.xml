<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/image6"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/bg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            android:background="@drawable/ic_logo"
            >

        </ImageView>


    </LinearLayout>

    <!-- Travel Guide -->
    <TextView
        android:id="@+id/travel_guid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="6dp"
        android:text="@string/travel_guid"
        android:textAppearance="@style/travel_guid"
        android:gravity="center"
        />
    <!-- Find your best place for... -->
    <TextView
        android:id="@+id/find_your_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_regular"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:text="@string/find_your_b"
        android:textAppearance="@style/find_your_b"
        android:gravity="center"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_started"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:text="Get Started"
        android:textSize="16sp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"
        android:background="@drawable/twitter_button"
        android:backgroundTint="#2D9CDB"/>

</LinearLayout>