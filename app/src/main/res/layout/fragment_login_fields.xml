<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#212530">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="88sp"
        android:layout_marginBottom="32sp"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="157sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="13sp"
            android:background="@drawable/facebook_button"
            android:paddingStart="10sp"
            android:drawableLeft="@drawable/ic_group"
            android:fontFamily="@font/montserrat_regular"
            android:text="Facebook"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="157sp"
            android:layout_height="wrap_content"
            android:background="@drawable/twitter_button"
            android:paddingStart="10sp"
            android:drawablePadding="12sp"
            android:drawableLeft="@drawable/twitter"
            android:fontFamily="@font/montserrat_regular"
            android:text="Twitter"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or login with email"
        android:textAlignment="center"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="24sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48sp"
        app:cardCornerRadius="15dp"
        android:paddingStart="24sp"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="22sp"
        android:backgroundTint="#F0F0F0">
    <EditText
        android:id="@+id/editTextEmailAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your email"
        android:fontFamily="@font/montserrat_regular"
        android:paddingTop="16sp"
        android:textSize="14sp"
        android:paddingStart="20sp"
        android:textColor="#80031925"
        android:backgroundTint="#00000000"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:paddingStart="24sp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="22sp"
        android:backgroundTint="#F0F0F0">
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingTop="16sp"
        android:paddingBottom="16sp"
        android:textSize="14sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#80031925"
        android:backgroundTint="#00000000"/>

        </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:fontFamily="@font/montserrat_regular"
        android:paddingRight="24sp"
        android:paddingBottom="24sp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_Button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:text="Log in"
        android:textSize="16sp"
        android:layout_marginBottom="120sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"
        android:background="@drawable/twitter_button"
        android:backgroundTint="#2D9CDB"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14sp"
        android:layout_marginBottom="20sp"
        android:textAlignment="center"
        android:textColor="#80FFFFFF"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:textSize="16sp"
        android:textColor="#031925"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/twitter_button"
        android:backgroundTint="#FFFFFF"/>


</LinearLayout>